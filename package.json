  "main": "index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "tsx src/index.ts",
    "build": "tsc",
    "test": "nyc mocha --require tsx/cjs tests/**/*.test.ts"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
