    "typescript": "^5.9.3"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "tests/**/*.test.ts"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "all": true
  }
